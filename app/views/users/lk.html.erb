<% if @user_articles.any? %>
<ul>
<% @user_articles.each do |article| %>
  <li class="d-flex justify-content-between">
    <%= link_to article.header, article_path(article.id) %>
    <span>
      <%= button_to "Edit", edit_article_path(article), method: :get %>
      <%= button_to "Delete", article_path(article), method: :delete %>
    </span>
  </li>
  <hr>
  <br>
<% end %>
</ul>
<% else %>
  <p style="font-size: 25px">Постов нет пока</p>
<% end %>

